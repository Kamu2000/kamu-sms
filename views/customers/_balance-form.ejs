<div class="modal fade" id="addBalance" tabindex="-1" role="dialog"
    data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title t-primary">
                    Add Balance
                </h5>
                <button type="button" class="close" data-dismiss="modal"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/customers/payment?_method=patch" method="post">
                    <div class="form-group">
                        <label for="phone">Customer ID (Phone
                            Number)</label>
                        <input type="text" class="form-control customer-input-query" name="phone"
                            placeholder="Make sure, you've typed correctly"
                            required maxlength="11" autocomplete="off"/>
                        <ul class="list-group auto-suggestion customer-input-query-group"></ul>
                    </div>
                    <div class="form-group">
                        <label for="paid">Add
                            Payment</label>
                        <input type="number" class="form-control"
                            name="paid"
                            placeholder="New payment balance"
                            required />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                            data-dismiss="modal">
                            <i class="ic-cross"></i> Close
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="ic-check"></i> Save
                            Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>