<div class="content-box">
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead class="table__header">
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Total Amount(Tk.)</th>
                    <th>Paid(Tk.)</th>
                    <th>Due(Tk.)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="table__body">
                <% if(locals.customers){
                    customers.forEach((customer) => { %>
                <tr>
                    <td><%= customer.name; %></td>
                    <td><%= customer.phone; %></td>
                    <td class="address-box"><%= customer.address; %></td>
                    <td><%= customer.amount.toLocaleString(); %></td>
                    <td>
                        <strong class="text-success"><%= customer.paid.toLocaleString(); %></strong>
                        <% /*<br>
                        <small class="text-muted p-0 font-weight-bold">
                            (Updated:  //customer.updatedAt.toLocaleDateString();)
                        </small> */%>
                    </td>
                    <td class="text-danger">
                        <%= customer.due.toLocaleString(); %>
                    </td>
                    <td class="table__actions text-center" data-item-id="<%= customer.id %>">
                        <a href="#" class="table__actions-btn customerEditButton"
                            data-toggle="modal" data-target="#addCustomer"><i
                                class="ic-pencil pr-2"></i>Edit</a>
                        <a href="#" class="table__actions-btn"
                            data-toggle="modal" data-target="#deleteModal"><i
                                class="ic-trash pr-2"></i>Delete</a>
                    </td>
                </tr>
                <% })} %>
            </tbody>
        </table>
    </div>
</div>