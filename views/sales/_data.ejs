<div class="content-box">
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead class="table__header">
                <tr>
                    <th>Date</th>
                    <th>Customer Name</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Net Amount(Tk.)</th>
                    <th>Paid(Tk.)</th>
                    <th>Due(Tk.)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="table__body">
                <% if(locals.sales){
                    sales.forEach((sale) => { %>
                <tr>
                    <td><%= sale.salesDate.toLocaleDateString(); %></td>
                    <td><%= sale.customer.name; %></td>
                    <td><%= sale.product.name; %></td>
                    <td><%= sale.quantity.toLocaleString(); %></td>
                    <td class="text-info font-weight-bold"><%= sale.amount.toLocaleString(); %></td>
                    <td class="text-success font-weight-bold"><%= sale.paid.toLocaleString(); %></td>
                    <td class="text-danger font-weight-bold">
                        <%= (sale.amount - sale.paid).toLocaleString(); %>
                    </td>
                    <td class="table__actions text-center" data-item-id="<%= sale.id %>">
                        <a href="#" class="table__actions-btn saleEditButton"
                            data-toggle="modal" data-target="#addSales"><i
                                class="ic-pencil pr-2"></i>Edit</a>
                        <a href="#" class="table__actions-btn"
                            data-toggle="modal" data-target="#deleteModal"><i
                                class="ic-trash pr-2"></i>Delete</a>
                        <a href="#" class="table__actions-btn"><i
                                class="ic-print pr-2"></i>Invoice</a>
                    </td>
                </tr>
                <% })} %>
            </tbody>
        </table>
    </div>
</div>